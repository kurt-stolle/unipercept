{
    // Basic configuration for debugging UniPercept V3 with Visual Studio Code
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "train interative",
            "type": "python",
            "request": "launch",
            "module": "unicli",
            "args": [
                "train",
                "--config",
            ],
            "envFile": "debug.env",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "eval interative",
            "type": "python",
            "request": "launch",
            "module": "unicli",
            "args": [
                "train",
                "--config",
                "-E"
            ],
            "envFile": "debug.env",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "train debug",
            "type": "python",
            "request": "launch",
            "module": "unicli",
            "args": [
                "train",
                "--config",
                "configs/cityscapes/multidvps_resnet18.py",
                "--debug"
                
            ],
            "envFile": "debug.env",
            "console": "internalConsole",
            "justMyCode": false
        },
    ],
    "compounds": [
        {
            "name": "Compound",
            "configurations": []
        }
    ],
    "inputs": [
        {
            "id": "configPath",
            "type": "promptString",
            "description": "Path to configuration file to resume from",

        },
        {
            "id": "additionalArgs",
            "type": "promptString",
            "description": "Additional arguments",
            "default": ""
        },
        {
            "id": "numGpus",
            "type": "promptString",
            "description": "Number of GPUs",
            "default": "1"
        },
        {
            "id": "sessionName",
            "type": "promptString",
            "description": "Session name (enter * to use the current date/time)",
            "default": "*"
        }
    ]
}